<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:elevation="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_news_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="5dp"
            android:text="江苏连云港人民政府:暂停核循环项目选址前期工作"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/text_news_list_title"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_extra0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:contentDescription="@string/news_list_img"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_photo_size_select_actual_black_24dp" />

            <ImageView
                android:id="@+id/image_extra1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:contentDescription="@string/news_list_img"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_photo_size_select_actual_black_24dp" />

            <ImageView
                android:id="@+id/image_extra2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:contentDescription="@string/news_list_img"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_photo_size_select_actual_black_24dp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>